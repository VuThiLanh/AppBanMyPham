<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="140dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/item_spbanchay"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:background="#F3F1F1"
        android:layout_height="140dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_spbanchay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/popular1" />
        <TextView
            android:id="@+id/tv_tenspbanchay"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Ten sp"
            android:textColor="#333333"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_spbanchay"
            app:layout_constraintStart_toStartOf="@id/tv_spbanchay"
            app:layout_constraintTop_toBottomOf="@id/tv_spbanchay" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>