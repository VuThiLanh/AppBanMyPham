<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:id="@+id/layout_item"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/recycler_bg2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/icondonhang"
        android:id="@+id/img_list_anh"
        android:layout_width="86dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xemnguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Người nhận: "
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_list_anh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="NguoiNhan"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/xemnguoinhan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_xemnguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Số điện thoại:"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_list_anh"
        app:layout_constraintTop_toBottomOf="@id/xemnguoinhan" />

    <TextView
        android:id="@+id/tv_sdtnguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="SDT"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_nguoinhan"
        app:layout_constraintTop_toBottomOf="@id/tv_nguoinhan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xemdiachi"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:text="Địa chỉ:"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/img_list_anh"
        app:layout_constraintTop_toBottomOf="@id/tv_sdtnguoinhan" />

    <TextView
        android:id="@+id/tv_diachinguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DiaChi"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_sdtnguoinhan"
        app:layout_constraintTop_toBottomOf="@id/tv_sdtnguoinhan" />

    <TextView
        android:id="@+id/tv_sanphammua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="SanPham"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_diachinguoinhan"
        app:layout_constraintTop_toBottomOf="@id/tv_diachinguoinhan" />

    <TextView
        android:id="@+id/xemtongtiennguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="12dp"
        android:text="Sản phẩm::"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/img_list_anh"
        app:layout_constraintTop_toBottomOf="@id/xemdiachi" />
    <TextView
        android:id="@+id/xemtong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="12dp"
        android:text="Tông tiền:"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/img_list_anh"
        app:layout_constraintTop_toBottomOf="@id/xemtongtiennguoinhan" />
    <TextView
        android:id="@+id/tv_tongtiennguoinhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TongTien"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_sanphammua"
        app:layout_constraintTop_toBottomOf="@id/tv_sanphammua" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_tongtiennguoinhan"
        app:layout_constraintTop_toBottomOf="@+id/tv_tongtiennguoinhan" />

    <TextView
        android:id="@+id/all_menu_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>
